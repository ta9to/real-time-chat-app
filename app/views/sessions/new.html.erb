<h1>ログイン</h1>

<% if flash[:alert] %>
  <div style="color: red;">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with url: login_path, local: true do |form| %>
  <div>
    <label for="session_email">Email</label><br>
    <%= form.text_field :email, name: "session[email]" %>
  </div>
  <div>
    <label for="session_password">Password</label><br>
    <%= form.password_field :password, name: "session[password]" %>
  </div>
  <br>
  <%= form.submit "ログイン" %>
<% end %>
